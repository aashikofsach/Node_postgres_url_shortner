<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Hello from server </h1>
    <p>This is our homepage</p>
    <!-- This thing is rendered conditionally  -->
     <% if (locals.id) { %>
        <p>URL Generated : http://localhost:8001/<%= locals.id %> </p>
      
     <% } %>

    <div>
        <form action="/url" method="post">
              <label >Enter your original URL</label>
        <input type="text" placeholder="Enter the original url" name="url">
        <button type="submit">Generate</button>
        </form>
      
    </div>
    <% if (locals.urls) { %>
        <table>
            <thead>
                <tr>
                    <th>S. No</th>
                    <th>shortId</th>
                    <th>redirect_url</th>
                    <th>No. of clicks</th>
                </tr>
            </thead>
            <tbody>
                <% locals.urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index = 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectUrl%></td>
                        <td><%= url.visitHistory.length %></td>

                    </tr>
                 
                <% }) %>
            </tbody>
        </table>
     
    <% } %>

</body>
</html>
